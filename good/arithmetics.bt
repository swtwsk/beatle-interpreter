# Prosta funkcja signum prezentujaca zagniezdzone 
# wyrazenia warunkowe
let signum x = 
    if x == 0 then 0 else
        if x > 0 then 1 else -1;;

signum 0;;
signum 10;;
signum (-4);;

# Operacje logiczne (and, not, or)
let logic x = 
    if not False and not True or x
    then not (not True)
    else not (not False);;

logic True;;
logic False;;